
@{
    ViewData["Title"] = "Contacto";
}

<h1>Contact Form</h1>

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label">Name</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Name"/>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" />
    </div>

    <div class="mb-3">
        <label for="mensaje" class="form-label">Mesagge</label>
        <textarea class="form-control" id="mensaje" name="mensaje" rows="3" placeholder="Message"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>

</form>